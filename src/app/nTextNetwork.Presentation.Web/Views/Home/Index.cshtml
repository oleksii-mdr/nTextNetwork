<!-- IE in quirks mode -->
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0//EN">
<html>
<head>
    <title>nTextNetwork - Home</title>
    <script src="../../Scripts/jquery-1.6.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.form.js" type="text/javascript"></script>
    <script src="../../Scripts/initTreeMap.js" type="text/javascript"></script>
    <script src="../../Scripts/jit.js" type="text/javascript"></script>
    <link href="../../Styles/base.css" rel="stylesheet" type="text/css" />
    <link href="../../Styles/Treemap.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div id="header">
        @using (Html.BeginForm("Analyse", "Home", FormMethod.Post,
                                         new[] { "enctype", "multipart/form-data" }))
        {
            <label>
                Path to .txt file</label>
            <input type="file" name="myfile" size="50" />
            <input type="submit" value="Upload" />
 
            <div class="progress">
                <div class="bar">
                </div>
                <div class="percent">
                    0%</div>
            </div>
            <div id="status">
            </div>
        }
        <!--This script must be under progress div otherwise progress is not displayed-->
        <script src="../../Scripts/formActivation.js" type="text/javascript"></script>
    </div>
    <div id="content">
        <div id="container">
            <div id="left-container">
                <div class="text">
                    This demo shows the top 50 most frequently used words in a text file. Follow these
                    steps to see it working
                    <ol>
                        <li>Browse for a .txt file</li>
                        <li>Click upload</li>
                    </ol>
                    In a few seconds you should see an image similar to <a href="http://i.imgur.com/yewgu.png">
                        this</a>.
                </div>
            </div>
            <div id="center-container">
                <div id="infovis">
                </div>
            </div>
            <div id="right-container">
                <div id="inner-details">
                </div>
            </div>
        </div>
    </div>
    <div id="footer">
        <ul>
            <li><a href="https://github.com/oleksii-mdr/nTextNetwork">nTextNetwork</a> </li>
            <li>2012</li>
        </ul>
    </div>
</body>
</html>
